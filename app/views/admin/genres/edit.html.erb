<main>
  <div class ="container">
    <div class = "row">
        <h5 class="col-auto mt-4">ジャンル編集</h5>
      </div>
    </div>
    
    <div class = "row ml-3">
      <% if @genre.errors.any? %>
        <h6 class = "col-auto text-danger">ジャンル名をいれてください。</h6>
      <% end %>
    </div>



      <%= form_with model: @genre,url: admin_genre_path(@genre.id),method: :patch do |f| %>
        <div class = "row ">
          <div class = "col-2 px-5 mt-5">
            <label for="genre_name",class= "col-form-label">ジャンル名</label>
          </div>
          <div class = "col-2 mt-5">
            <%= f.text_field :name ,class: "form-control genre_name"%>
          </div>
          <div class="col-auto mt-5">
            <%= f.submit '変更を保存', class:"btn btn-success" %>
          </div>
        </div>
      <%end%>

  </main>