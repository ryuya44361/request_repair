<main>
  <div class ="container">
    <div class = "row">
        <h5 class="col-auto my-4">ジャンル一覧・追加</h5>
      </div>
    </div>

    <div class = "row ml-3">
      <% if @genre.errors.any? %>
        <h6 class = "col-auto text-danger">ジャンル名をいれてください。</h6>
      <% end %>
    </div>



      <%= form_with model: @genre,url: admin_genres_path do |f| %>
        <div class = "row ">
          <div class = "col-2 px-5 mt-3">
            <label for="genre_name",class= "col-form-label">ジャンル名</label>
          </div>
          <div class = "col-2 mt-3">
            <%= f.text_field :name ,class: "form-control genre_name"%>
          </div>
          <div class="col-auto mt-3">
            <%= f.submit '新規投稿', class:"btn btn-success" %>
          </div>
        </div>
      <%end%>




    <div class ="row">
    <div class="col-4 px-5 mt-5">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
          <% @genres.each do |genre| %>

            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success"%></td>
            </tr>

          <%end%>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </main>