<main>
  <div class = "container">
    <div class = "row my-3">
      <div class = "col-6">
        <h2>アカウント一覧（会員）</h2>
      </div>
      <div class = "col-4 text-right">
        <%= link_to "技術者ユーザーへ　＞＞", admin_engineers_path %>  
      </div>
    </div>


    <div class ="row">
    <div class="col-10 px-5 mt-5">
        <table class="table table-bordered border-primary">
          <thead>
            <tr>
              <th>登録日</th>
              <th>名前</th>
              <th>住所</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>

            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.created_at.strftime('%y/%m/%d %H:%M')%></td>
                <td>
                  <%= link_to  admin_customer_path(customer.id) do %>
                    <%= customer.last_name+customer.first_name %>
                  <%end%>
                </td>
                <td>
                  <%= customer.postal_code_display %><br />
                  <%= customer.address %>
                </td>
                <td>
                   <% if customer.is_deleted? %>
                     退会
                   <% else %>
                     有効
                   <% end %>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
        </div>
    </div>

    <div class = "row justify-content-center">
      <%= paginate @customers %>
    </div>
  </div>
</main>