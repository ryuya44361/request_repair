<main>
  <div class = "container">
    <div class = "row my-3">
      <div class = "col-6">
        <h2>アカウント一覧（技術者）</h2>
      </div>
      <div class = "col-4 text-right">
        <%= link_to "会員ユーザーへ　＞＞", admin_customers_path %>
      </div>
    </div>

     <div class ="row">
    <div class="col-10 px-5 mt-5">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>登録日</th>
              <th>名前</th>
              <th>電話番号</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>

            <% @engineers.each do |engineer| %>
              <tr>
                <td><%= engineer.created_at.strftime('%y/%m/%d %H:%M')%></td>
                <td>
                  <%= link_to  admin_engineer_path(engineer.id) do %>
                    <%= engineer.last_name+engineer.first_name %>
                  <%end%>
                </td>
                <td><%= engineer.telephone_number %></td>
                <td>
                  <% if engineer.engineers_deleted? %>
                     退会
                   <% else %>
                     有効
                   <% end %>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
        </div>
    </div>

    <div class = "row justify-content-center">
      <%= paginate @engineers %>
    </div>
  </div>
</main>