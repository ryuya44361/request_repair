<main>
  <div class='container'>
    <div class='row my-3 ml-3'>
      <h2>ログイン</h2>
    </div>

<%= form_with model: resource, url: session_path(resource) do |f| %>
  <div class = "row justify-content-center">
    <div class = "col-2 mt-3">
      <%= f.label "メールアドレス:" %>
    </div>
    <div class = "col-3 mt-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
</div>

<div class = "row justify-content-center">
    <div class="col-2 mt-3">
      <%= f.label "パスワード:" %>
    </div>
    <div class = "col-3 mt-3">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
</div>

<div class = "row">
  <div class = "col-2 mt-5 mx-auto">
    <%= f.submit "ログイン" ,class: "btn btn-primary btn-block"%>
  </div>
</div>
<% end %>

    <div class = "row my-3 ml-5">
      <h5>新規登録の方</h5>
    </div>
  
    <div class = "row ml-5">
      <div class = "col">
        <p>
          <%= render "public/shared/links" %>　から登録してください。
        </p>
      </div>
    </div>
  </div>
</main>