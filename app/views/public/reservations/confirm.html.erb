<main>
    <div class = "container">
      <div class = "row my-3">
        <div class = "col-4">
          <h2>予約確認画面</h2>
        </div>
      </div>

      <div class = "row mb-3">
        <label>氏名：</label>
        <%= @reservation.customer.last_name %><%= @reservation.customer.first_name %>
      </div>

      <div class = "row mb-3">
        <label>住所：</label>
        <%= @reservation.customer.address_display %>
      </div>

      <div class = "row mb-3">
        <div class = "col-3 pl-0">
          <label>電話番号：</label>
          <%= @reservation.customer.telephone_number %>
        </div>

        <div class = "col-4">
          <label>メールアドレス：</label>
          <%= @reservation.customer.email %>
        </div>
      </div>


      <h4 class = "my-3">依頼内容</h4>

      <div class = "row mb-3">
        <div class = "col-3">
          <label>ジャンル：</label>
          <%= @reservation.genre.name %>
        </div>

        <div class = "col-3">
          <label>機種：</label>
          <%= @reservation.model_number %>
        </div>

        <div class = "col-3">
          <label>シリアル：</label>
          <%= @reservation.serial_number %>
        </div>
      </div>
      
      <label>依頼内容</label>
        <div class="card">
          <div class="card-body">
            <%= @reservation.introduction %>
          </div>
        </div>

      <div class = "row mb-3">
        <label>現象写真：</label>
          <% if @reservation.repair_images.attached? %>
            <% @reservation.repair_images.each do |repair_image| %>
              <%= image_tag repair_image.variant(resize_to_limit: [100, 100]) %>
            <% end %>
          <% end %>
      </div>

      <div class="row mt-4">
        <div class="col-12 col-md-4 mx-auto">
          <%= link_to "マイページへ戻る" ,reservation_path(@reservation.id), method: :delete, class: "btn btn-danger btn-block" %>
        </div>

        <div class="col-12 col-md-4 mx-auto">
          <%= link_to "本当に予約しますか？" ,complete_reservations_path, class: "btn btn-primary btn-block"%>
        </div>
      </div>

    </div>
</main>