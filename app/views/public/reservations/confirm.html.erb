<main>
    <div class = "container">
      <div class = "row my-3">
        <div class = "col-4">
          <h2>予約画面</h2>
        </div>
      </div>
      
      <div class = "row mb-3">
        <label>氏名：</label>
        <%= @reservation.customer.last_name+@reservation.customer.first_name %>
      </div>
      
      <div class = "row mb-3">
        <label>住所：</label>
        <%= @reservation.customer.address_display %> 
      </div>
        
      <div class = "row mb-3 text-left">
        <div class = "col-4">
          <label>電話番号：</label>
          <%= @reservation.customer.telephone_number %> 
        </div>
      
        <div class = "col-4">
          <label>メールアドレス：</label>
          <%= @reservation.customer.email %> 
        </div>
      </div>
      
      
      <h4 class = "my-3">対応内容</h4>
      
      <div class = "row mb-3">
        <div class = "col-3">
          <label>ジャンル：</label>
          <%= @reservation.genre.name %>
        </div>
        
        <div class = "col-3">
          <label>機種：</label>
          <%= @reservation.model_number %>
        </div>
        
        <div class = "col-3">
          <label>シリアル：</label>
          <%= @reservation.serial_number %>
        </div>
      </div>
      
      <div class = "row mb-3">
        <label>内容</label>
        <table class="table table-bordered border-dark" >
          <tr>
            <td><%= @reservation.introduction %></td>
          </tr>
        </table>
      </div>
      
    </div>
</main>