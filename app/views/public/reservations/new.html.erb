<main>
  <div class = "container">
    <div class = "row my-3">
      <div class = "col-4">
        <h2>予約画面</h2>
      </div>
      <div class = "col-6">
        <%= @day_params %>
        <%= @start_time_params %> ~
        <%= @finish_time_params %>
      </div>
    </div>

    <%= form_with model: @restriction,url: reservations_path do |f| %>
      <div class = "row mb-3">
        <div class = "col">
          <label>ジャンル：</label>
          <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] } , include_blank: "--選択して下さい--" %>
        </div>
      </div>

      <div class = "row mb-3">
        <div class = "col">
          <label>機種：</label>
          <%= f.text_field :model_number %>
        </div>
      </div>

      <div class = "row mb-3">
        <div class = "col">
          <label>シリアル：</label>
          <%= f.text_field :serial_number %>
        </div>
      </div>

      <div class = "row mb-3">
        <div class = "col">
          <label>現象画像：</label>
          <%= f.file_field :repair_images, placeholder: "ファイルを選択", accept: "image/*", direct_upload: true, multiple: true,class: "form-control-file repair_image" %>　<!--複数枚投稿できるようにする-->
        </div>
      </div>

      <div class = "row mb-3">
        <div class = "col">
          <label>内容</label><br />
          <%= f.text_area :introduction ,:size => "100" %>
        </div>
      </div>

      <div class = "row justify-content-center mb-3">
        <%= f.hidden_field :reservation_day, :value => @day_params %>
        <%= f.hidden_field :start_time, :value => @start_time_params %>
        <%= f.hidden_field :finish_time, :value => @finish_time_params %>
        <%= f.hidden_field :customer_id, :value => current_customer.id  %>
        <%= f.submit "予約する" ,class: "btn btn-success col-3"%>
      </div>
    <% end %>


  </div>
</main>