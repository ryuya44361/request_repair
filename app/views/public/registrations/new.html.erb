<main>
<div class ="container">
  <div class = "row my-3 ml-5">
    <h5>新規登録</h5>
  </div>

<%= form_with model: resource, url: registration_path(resource) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class = "row">
    <div class = "col-3">
      <p>名前</p>
    </div>

    <div class = "col-4 ml-4">
      <div class="field">
        <%= f.label "（姓）　" %>
        <%= f.text_field :last_name,autofocus: true %>
      </div>
    </div>

    <div class = "col-4">
      <div class="field">
        <%= f.label "（名）　" %>
        <%= f.text_field :first_name %>
      </div>
    </div>
  </div>


  <div class ="row">
    <div class = "col-3">
      <p>フリガナ</p>
    </div>

    <div class = "col-4 ml-4">
      <div class="field">
        <%= f.label "（セイ）" %>
        <%= f.text_field :last_name_kana%>
      </div>
    </div>

    <div class = "col-4">
      <div class="field">
        <%= f.label "（メイ）" %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "col-4">
      <p>メールアドレス</p>
    </div>

    <div class = "col-6">
      <div class="field">
        <%= f.email_field :email,placeholder: "sample@example.com" %>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "col-4">
      <p>郵便番号（ハイフンなし）</p>
    </div>

    <div class = "col-6">
      <div class="field">
        <%= f.text_field :postal_code,placeholder: "0000000000" %>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "col-4">
      <p>住所</p>
    </div>

    <div class = "col-8">
      <div class="field">
        <%= f.text_field :address ,placeholder: "東京都渋谷区代々木神園町0-0",class: "col-9"%>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "col-4">
      <p>電話番号（ハイフンなし）</p>
    </div>

    <div class = "col-6">
      <div class="field">
        <%= f.text_field :telephone_number ,placeholder: "0000000000"%>
      </div>
    </div>
  </div>

 <div class = "row">
    <div class = "col-4">
      <p>パスワード（６文字以上）</p>
    </div>

    <div class = "col-6">
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "col-4">
      <p>パスワード確認用</p>
    </div>

    <div class = "col-6">
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "col-4"></div>
    <div class = "col-6">
      <div class="actions">
        <%= f.submit "新規登録" ,class: "col-8 btn btn-sm btn-success my-3" %>
      </div>
    </div>
  </div>
<% end %>
  
  <div class = "row my-3 ml-5">
    <h5>既に登録済みの方</h5>
  </div>
  
  <div class = "row ml-5">
    <div class = "col">
      <p>
        <%= render "public/shared/links" %>　からログインしてください。
      </p>
    </div>
  </div>
</div>
</main>