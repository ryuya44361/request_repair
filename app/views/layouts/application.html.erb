<!DOCTYPE html>
<html>
  <head>
    <title>RequestRepair</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-dark bg-dark">
        <div class="container">
          <% if admin_signed_in? %>
            <p class="navbar-brand my-0">リクリペ</p>
          <% elsif engineer_signed_in? %>
            <p class="navbar-brand my-0">リクリペ</p>
          <% else %>
            <a class="navbar-brand" href="/">リクリペ</a>
          <%end%>


          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto align-items-end">

        <% if admin_signed_in? %>

          <li class="nav-item">
            <%= link_to admin_default_limits_path, class: 'nav-link text-light' do %>
              予約設定
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to day_admin_restrictions_path, class: 'nav-link text-light' do %>
              予約制限
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to day_admin_reservations_path, class: 'nav-link text-light' do %>
              予約一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to admin_completions_path, class: 'nav-link text-light' do %>
              対応完了一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to admin_customers_path, class: 'nav-link text-light' do %>
              ユーザー一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to admin_genres_path, class: 'nav-link text-light' do %>
              ジャンル一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
              ログアウト
            <%end%>
          </li>

        <% elsif engineer_signed_in? %>

          <li class="nav-item">
            <%= link_to engineer_engineers_path, class: 'nav-link text-light' do %>
              マイページ
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to day_engineer_reservations_path, class: 'nav-link text-light' do %>
              予約一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to engineer_completions_path, class: 'nav-link text-light' do %>
              対応完了一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to engineer_correspondences_path, class: 'nav-link text-light' do %>
              対応予定一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to destroy_engineer_session_path, method: :delete, class: 'nav-link text-light' do %>
              ログアウト
            <%end%>
          </li>

        <% elsif customer_signed_in? %>

          <li class="nav-item">
            <%= link_to customers_path, class: 'nav-link text-light' do %>
              マイページ
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to day_reservations_path, class: 'nav-link text-light' do %>
              予約一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to completions_path, class: 'nav-link text-light' do %>
              対応完了一覧
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
              ログアウト
            <%end%>
          </li>

        <% else %>

          <li class="nav-item">
            <%= link_to about_path, class: 'nav-link text-light' do %>
              アバウト
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to new_customer_registration_path, class: 'nav-link text-light' do %>
              新規登録
            <%end%>
          </li>

          <li class="nav-item">
            <%= link_to customer_session_path, class: 'nav-link text-light' do %>
              ログイン
            <%end%>
          </li>


        <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <nav class="navbar navbar-expand navbar-dark bg-dark mt-5">

      </nav>
    </footer>
  </body>
</html>
